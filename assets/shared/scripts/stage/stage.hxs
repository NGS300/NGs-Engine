function onCreate() {
    var bg = new BGSprite(-600, -200, 'back', 'week1', 0.9, 0.9);
	add(bg);
	
	var front = new BGSprite(-650, 600, 'front', 'week1', 0.9, 0.9);
	front.setGraphicSize(Std.int(front.width * 1.1));
	front.updateHitbox();
	add(front);
	
	var curtains = new BGSprite(-500, -300, 'curtains', 'week1', 1.3, 1.3);
	curtains.setGraphicSize(Std.int(curtains.width * 0.9));
	curtains.updateHitbox();
	add(curtains);
}